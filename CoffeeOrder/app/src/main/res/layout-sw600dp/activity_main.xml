<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freelance.brooklyn.coffeeorder.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <EditText
            android:id="@+id/extName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ref_n"
            android:inputType="textCapWords"
            android:layout_marginBottom="@dimen/marginBottom"/>

        <TextView
            android:id="@+id/txtToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:text="@string/ref_t"
            android:textAllCaps="true"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:id="@+id/chkWhippedCream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/ref_w"
            android:textSize="@dimen/txtSize" />

        <CheckBox
            android:id="@+id/chkChocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingLeft"
            android:text="@string/ref_ch"
            android:textSize="@dimen/txtSize"
            android:layout_marginBottom="@dimen/marginBottom"/>

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:text="@string/ref_q"
            android:textAllCaps="true"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDecrement"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:onClick="decrement"
                android:text="@string/ref_d" />

            <TextView
                android:id="@+id/txtCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/txtTotal"
                android:text="@string/ref_c"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txtSize" />

            <Button
                android:id="@+id/btnIncrement"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:onClick="increment"
                android:layout_marginLeft="@dimen/txtTotal"
                android:text="@string/ref_i" />

        </LinearLayout>

       <!-- <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:layout_marginTop="@dimen/txtmarginTop"
            android:text="@string/ref_orderSummary"
            android:textAllCaps="true"
            android:textSize="@dimen/txtSize"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/txtTotalOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginBottom"
            android:text="@string/ref_totalOrderSummary"
            android:textSize="@dimen/txtSize"
            android:textColor="@android:color/holo_blue_dark"/>-->

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:text="@string/ref_o"
            android:layout_marginTop="@dimen/marginBottom"/>

    </LinearLayout>

</ScrollView>